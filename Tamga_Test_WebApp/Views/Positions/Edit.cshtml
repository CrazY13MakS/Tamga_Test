@model Tamga_Test_WebApp.Models.Position

@{
    ViewData["Title"] = "Редактирование позиции";
}

<h2>Редактирование</h2>

<h4>Позиция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PositionId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryForkMin" class="control-label"></label>
                <input asp-for="SalaryForkMin" class="form-control" />
                <span asp-validation-for="SalaryForkMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryForkMax" class="control-label"></label>
                <input asp-for="SalaryForkMax" class="form-control" />
                <span asp-validation-for="SalaryForkMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default" >Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
