@model Tamga_Test_WebApp.Models.Position

@{
    ViewData["Title"] = "Создание позиции";
}

<h2>Создание позции</h2>

<h4>Позиция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryForkMin" class="control-label"></label>
                <input asp-for="SalaryForkMin" class="form-control" />
                <span asp-validation-for="SalaryForkMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryForkMax" class="control-label"></label>
                <input asp-for="SalaryForkMax" class="form-control" />
                <span asp-validation-for="SalaryForkMax" class="text-danger"></span>
            </div>
            @* Hide field if companies count equal 0*@
            @if (ViewBag.ShowCompanies)
            {
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @**Validation equalorgreater *@
    <script src="~/js/EqualOrGreaterComparer.js"></script>

}